<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
              version="2.3">

    <factory>
        <exception-handler-factory>
            br.com.webbudget.infrastructure.jsf.exception.CustomExceptionHandlerFactory
        </exception-handler-factory>
    </factory>

    <render-kit>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.InputNumberRenderer</renderer-type>
            <renderer-class>br.com.webbudget.infrastructure.jsf.primefaces.CustomInputNumberRenderer</renderer-class>
        </renderer>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.CalendarRenderer</renderer-type>
            <renderer-class>br.com.webbudget.infrastructure.jsf.primefaces.CustomCalendarRenderer</renderer-class>
        </renderer>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.MessagesRenderer</renderer-type>
            <renderer-class>br.com.webbudget.infrastructure.jsf.primefaces.AutoCloseMessages</renderer-class>
        </renderer>
    </render-kit>

    <application>
        <!-- configuracao da locale -->
        <locale-config>
            <default-locale>pt_BR</default-locale>
            <supported-locale>pt_BR</supported-locale>
            <supported-locale>en_US</supported-locale>
        </locale-config>

        <!-- mensagens de validacao -->
        <resource-bundle>
            <base-name>ValidationMessages</base-name>
            <var>validation</var>
        </resource-bundle>

        <!-- bundle -->
        <resource-bundle>
            <base-name>i18n.enums</base-name>
            <var>enums</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>i18n.messages</base-name>
            <var>messages</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>i18n.menu</base-name>
            <var>menu</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>i18n.breadcrumb</base-name>
            <var>breadcrumb</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>i18n.permissions</base-name>
            <var>permission</var>
        </resource-bundle>
    </application>
</faces-config>
